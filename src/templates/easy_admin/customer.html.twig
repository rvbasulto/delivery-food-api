{% if view == 'show' %}
    {% if value|length > 0 %}      
         {% set array = ['name','surnames','nif','phone','email'] %}
            {% for a in array %}
             <div class="form-group">
             <label class="control-label"> {{a |trans }} </label> 
              <div class="form-widget">
                  <div class="form-control"> {{ attribute(value,a) }}  </div>
         </div>
             </div>
         {% endfor %}
    {% else %}
        <div class="empty collection-empty">
            {{ include(entity_config.templates.label_empty) }}
        </div>
    {% endif %}
{% endif %}
